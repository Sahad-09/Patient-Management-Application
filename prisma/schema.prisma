generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Patient {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  age      String
  sex      String
  contact  String
  dateTime DateTime @default(now())
  Details  Details?
}

