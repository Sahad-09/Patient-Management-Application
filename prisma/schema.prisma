generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Patient {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  age      String
  sex      String
  contact  String
  dateTime DateTime @default(now())
  details  Details? @relation("PatientDetails") // No onDelete here
}

model Details {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  chiefComplaint     String?
  existingDisease    String?
  signAndSymptoms    String?
  examinationDetails String?
  labInvestigation   String?
  xRaysOrMRs         String?
  finalDiagnosis     String?
  treatmentPresented String?
  followUp           String?
  patientId          String  @unique @db.ObjectId
  patient            Patient @relation("PatientDetails", fields: [patientId], references: [id], onDelete: Cascade) // onDelete here
}
